@model CategoryCreateViewModel
<div class="row col-sm-6">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create Category</h4>
                <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsMain">IsMain</label>
                        <input asp-for="IsMain" class="checkout-checkbox" style="margin-top:6px; width:15px" id="isMain" placeholder="IsMain">
                        <span asp-validation-for="IsMain" class="text-danger"></span>
                    </div>
                    <div class="form-group d-none" id="imageDiv">
                        <label asp-for="Image">Choose image</label>
                        <input asp-for="Image" class="form-control" placeholder="Choose Image" accept="image/*">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="form-group" id="parentDiv">
                        <label asp-for="ParentId">Choose Parent Categories</label>
                        <select asp-for="ParentId" asp-items="Model.ParentCategories" class="form-control" placeholder="Choose Parent Category"></select>
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section SubCategory
{
    <script>
        let isMain = document.getElementById("isMain");
        let imageDiv = document.getElementById("imageDiv");
        let parentDiv = document.getElementById("parentDiv");

        isMain.addEventListener("change", function () {

            if (isMain.checked) {
                imageDiv.classList.remove("d-none");
                parentDiv.classList.add("d-none");

            } else {
                imageDiv.classList.add("d-none");
                parentDiv.classList.remove("d-none");
            }
        });
    </script>
}